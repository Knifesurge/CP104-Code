from functions import to_gray, grayscale

fh = open("stupidColour.bmp", "rb")

# Read the 10th to 13th bytes of the header
fh.seek(10)
# Read the next 3 bytes
bytes_read = fh.read(3)
# Size of header
size = int.from_bytes(bytes_read, byteorder="little")

